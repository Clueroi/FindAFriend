generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Age {
  filhote
  adulta
  velhice
}

enum Body {
  pequeno
  medio
  grande
}

enum Independence {
  baixa
  media
  alta
}

enum Energy {
  baixa
  media
  alta
}

enum Env {
  amplo
  fechado
}

model User {
  id            String @id @default(uuid())
  name          String
  email         String @unique
  password_hash String

  @@map("users")
}

model Organization {
  id            String  @id @default(uuid())
  name          String
  email         String  @unique
  cep           String
  endereco      String
  city          String
  whatsapp      Decimal @unique
  password_hash String
  pets          Pet[]

  @@map("orgs")
}

model Pet {
  id           String       @id @default(uuid())
  name         String
  description  String?
  age          Age          @default(filhote)
  body         Body         @default(pequeno)
  energy       Energy       @default(baixa)
  independence Independence @default(baixa)
  env          Env          @default(amplo)
  image        String
  requirements String
  org_id String
  org Organization @relation(fields: [org_id], references: [id])

  @@map("pets")
}
